{% extends 'layouts/base.html.twig' %}

{% block body %}
    
	<!-- Banner -->

<div class="banner">
    <div class="banner_background" style="background-image:url({{ asset('frontend/images/banner_background.jpg')}})"></div>
    <div class="container fill_height">
        <div class="row fill_height">
            <div class="banner_product_image"><img src="{{ asset('frontend/images/banner_product.png')}}" alt=""></div>
            <div class="col-lg-6 offset-lg-1 fill_height">
                <div class="banner_content">
                    <h1 class="banner_text">Car Market place</h1>
                    <br>
                    <br>
                    <div class="banner_product_name">Transfer, buy or sell a vehicle</div>
                    <div class="button banner_button"><a href="#">Shop Now</a></div>
                </div>
            </div>
        </div>
    </div>
</div>

{% if cars %}
    <br><br><br><br>
<h1 class="col-lg-12 text-center">New Offers</h1>
<br><br>
<div class="row">
    
{% for car in cars %}
        <div class="col-lg-6">
            <article>
                <header>
                    <h3>{{ car.make }} - {{ car.price }} EURO</h3>
                </header>
                <a href="{{ path('car_view', {id:car.id}) }}">
                    <img src="{{ asset('uploads/images/cars/' ~ car.image ) }}" width="400px" height="200px">
                </a>

                <p class="author">
                    Date Added: {{ car.dateAdded|date("F jS \\a\\t g:ia") }}
                </p>

                <p class="author">
                    Author: {{ car.author.username }}
                </p>

                <footer>
                    <a class="btn btn-primary btn-xs" href="{{ path('car_view', {id: car.id}) }}">View</a>
                </footer>
            </article>
        </div>

    {% endfor %}
</div>

{% endif %}
    
{% endblock %}
