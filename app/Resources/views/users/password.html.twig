{% extends 'layouts/base.html.twig' %}

{% block body %}
    <br><br><br><br>
    <h2 class="text-center">Change Password</h2>
    <br>
    {%  for msg in app.session.flashBag.get('success')  %}
        <div class="alert alert-success">
            {{ msg }}
        </div>
    {%  endfor  %}
    {%  for msg in app.session.flashBag.get('errors')  %}
        <div class="alert alert-danger">
            {{ msg }}
        </div>
    {%  endfor  %}

    <br><br>
    <div class="row mt-3">
        <form class="form-horizontal col-lg-5 offset-lg-3" action="{{ path('change_password') }}" method="post">
            <fieldset>
                
                <div class="form-group">
                    <label class="col control-label" for="user_old_password">Current Password</label>
                    <div class="col">
                        <input type="password" class="form-control" id="user_old_password" placeholder="Current Password" name="user[old_password]" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col control-label" for="user_password_first">New Password</label>
                    <div class="col">
                        <input type="password" class="form-control" id="user_password_first" placeholder="New Password" name="user[password][first]" required>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col control-label" for="user_password_second">Confirm New Password</label>
                    <div class="col">
                        <input type="password" class="form-control" id="user_password_second" placeholder="Confirm New Password" name="user[password][second]" required>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="submit" class="btn btn-primary">Change</button>
                    </div>
                </div>

                {{  form_row(form._token) }}
            </fieldset>
        </form>
    </div>
    <br><br><br><br>
    
{% endblock %}
